.room-container
  width 100%
  height 100%
  background-color #ffffff
  position relative
  .room-wrap
    position relative
    width 100%
    height 100vh
    overflow hidden
    .room-content
      padding 20px
      height calc(100% - 120px)
      overflow-y scroll
      // 遮住滚动条
      width calc(100% + 20px)
      .welcome-item
        color #666666
        margin-top 10px
        margin-left 100px
        margin-bottom 10px
      .welcome-content
        width 100%
        .create-user-btn
          width 100%
      .normal-title
        font-size 14px
        font-weight 500
      .wait-content
        background-color #eeeeee
        overflow hidden
        max-height 180px
        min-height 60px
        position relative
        display flex
        flex-wrap wrap
        padding 10px
        .wait-cell
          background-color #67c23a
          color #ffffff
          text-align center
          height 30px
          line-height 30px
          font-size 14px
          padding-left 20px
          padding-right 20px
          border-radius 3px
      .desk-content
        border-radius 4px
        border 1px solid #eeeeee
        overflow hidden
        height 220px
        position relative
        padding 5px
        flex-wrap wrap
        flex-direction row
        display flex
        .seat-cell
          width 33.33% - 2.5px
          height 60px
          .seat-in
            width 60px
            height 60px
            line-height 60px
            font-size 14px
            text-align center
            border-radius 30px
            color #ffffff
            background-color orange
          .empty-seat
            width 60px
            height 60px
            line-height 60px
            font-size 14px
            text-align center
            border-radius 30px
            background-color #eeeeee
          .seat-status
            font-size 14px
          .cell-text
            width 70px
            text-align center
            overflow hidden
            .kick-btn,.kick-btn:focus,.kick-btn:hover,.kick-btn:after
              border none
              box-shadow none!important
      .full-btn
        width 100%
    .header
      width 100%
      box-shadow 0 2px 4px rgba(0,21,41,.08)
      height 60px
      .room-title
        font-size 20px
        color #333333
        text-align center
        line-height 60px
        font-weight 500
      .welcome-user
        font-style italic
    .footer
      width 100%
      height 60px
      position position
      bottom 0
      left 0
      .logout-btn
        width 100%
        height 100%
        font-size 16px
.error-view
  width 100%
  .desc
    font-size 16px
    font-weight 500
    text-align center
